<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <TableRow>
         <TextView
         android:text="RECORD AREA"
         android:textSize="24sp"
         android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        </TableRow>

    //Button Record
    <Button
        android:id="@+id/btnStartRecord"
        android:text="Record"
        android:color = "#448AFF"
        android:background="@drawable/btnstartrecord_design"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    //Button Stop Record
    <Button
        android:id="@+id/btnStopRecord"
        android:text="STOP RECORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="PLAY AREA"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    //Button play
    <Button
        android:id="@+id/btnPlay"
        android:text="Play"
        android:background="@drawable/btnplay_design"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    //Button Pause
    <Button
        android:id="@+id/btnPause"
        android:background="@drawable/btnpause_design"
        android:text="Pause"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    //Button Stop
    <Button
        android:id="@+id/btnStop"
        android:background="@drawable/btnstop_design"
        android:text="Stop"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/InformationArea"
        android:textSize="30sp"
        android:text="Information Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    //Button Stop
    <Button
        android:id="@+id/btnAllRecords"
        android:text="All Records"
        android:layout_width="100dp"
        android:layout_height="70dp"/>
    </TableLayout>
</ScrollView>